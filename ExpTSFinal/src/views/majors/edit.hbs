<h1>Editar Curso</h1>

<form method="POST" action="/majors/{{major.id}}?_method=PUT">
  <div class="mb-3">
    <label for="name" class="form-label">Nome do Curso</label>
    <input type="text" class="form-control" id="name" name="name" value="{{major.name}}" required />
  </div>
  <button type="submit" class="btn btn-primary">Atualizar</button>
</form>
