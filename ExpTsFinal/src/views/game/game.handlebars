<h1>Space Shooter</h1>
<div id="gameArea">
  <!-- Aqui vai o canvas ou conteúdo do seu jogo -->
  <canvas id="gameCanvas" width="600" height="400"></canvas>
  <div id="game-over" style="display: none;">
  <h2>Game Over</h2>
  <p id="final-score"></p>
  <button id="restart-btn">Reiniciar</button>
</div>

</div>

<script>
  // Substitua isso com seu evento real de Game Over
  function onGameOver(score) {
    fetch('/save-score', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ score })
    })
    .then(res => res.json())
    .then(data => console.log('Score salvo com sucesso!', data))
    .catch(err => console.error('Erro ao salvar score:', err));
  }

  // ⚠️ Simulação: dispara Game Over com score aleatório após 5s
  setTimeout(() => {
    const score = Math.floor(Math.random() * 1000);
    onGameOver(score);
  }, 5000);
</script>
